{
  "name": "monqypence-server",
  "version": "1.0.0",
  "description": "monqyPence backend app",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monqyClouds/monqyPence.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/server.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "cluster": "pm2 start dist/server.js -i max",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "expenses-app"
  ],
  "author": "Somto",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.16",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "mongoose": "^6.6.0",
    "morgan": "^1.10.0",
    "pm2": "^5.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.19"
  }
}
